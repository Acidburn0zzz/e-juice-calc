{
    "app-id": "com.szibele.EJuiceCalc",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "ejuicecalc",
    "finish-args": [
        "--socket=x11"
    ],
    "cleanup": [
    ],
    "cleanup-commands": [
    ],
